  <body>
<section class="body">
<span class="separator"></span>
    <div class="col-lg-12">
	<section class="card">
		<header class="card-header">
			<div class="card-actions">
				<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
				<a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
			</div>

			<h2 class="card-title">Crear Criterio</h2>
			<p class="card-subtitle">
				crear un  <code>criterio</code> del playbook.
			</p>
		</header>
		<div class="card-body">
			<form class="form-horizontal" action="/criterios/create" method="post">
				<div class="card-body">
					<div class="form-group row">
						<label class="col-sm-2 control-label text-sm-left pt-2">Nivel:</label>
						<div class="col-sm-3">
							<select class="form-control mb-2 mr-sm-2 mb-sm-0" name="selectLevelName">
								<% if(locals.arrayLevels) { %>
								<% arrayLevels.forEach( function( result ) { %>
								<option value="<%= result.id%>"><%= result.levelName %></option>
								<% }) %>
								<% } %>
							</select>
						</div>
					</div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label text-sm-left pt-2">Principio:</label>
                        <div class="col-sm-3">
                            <select class="form-control mb-2 mr-sm-2 mb-sm-0" name="selectPrincipleName">
                                <option value="P1">Principio 1</option>
                                <option value="P2">Principio 2</option>
                                <option value="P3">Principio 3</option>
                                <option value="P4">Principio 4</option>
                            </select>
                        </div>
                    </div>
					<div class="form-group row">
						<label class="col-sm-2 control-label text-sm-left pt-2">Nombre:</label>
						<div class="col-sm-3">
							<input type="text" name="textNameCriteria" class="form-control" placeholder="Preparación para la inception">
						</div>
					</div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label text-sm-left pt-2">Valor Requerido:</label>
                        <div class="col-sm-3">
                            <select class="form-control mb-2 mr-sm-2 mb-sm-0" name="selectOficialValue">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </div>
                    </div>
				</div>
				<footer class="card-footer text-right">
					<button class="btn btn-primary">Enviar </button>
					<button type="reset" class="btn btn-default">Limpiar</button>
				</footer>
			</form>
		</div>
	</section>
</div>
    <div class="col-lg-12">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle=""></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss=""></a>
                </div>

        <h2 class="card-title">Actions</h2>
            </header>
            <div class="card-body">
                <table class="table table-responsive-md mb-0" id="datatable-level">
                    <thead>
                    <tr>
                        <th>Nivel</th>
                        <th>Principio</th>
                        <th>Criterio</th>
                        <th>Valor</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if(locals.arrayCriteria) { %>
                    <% arrayCriteria.forEach( function( result ) { %>
                    <tr>
                        <td class="actionName"><%= result.Level.levelName %></td>
                        <td class="actionLevel"><%= result.principleName%></td>
                        <td class="actionLevel"><%= result.criteriaName%></td>
                        <td class="actionLevel"><%= result.officialValueNum%></td>
                        <td class="actions">
                            <a href="/niveles/<%= result.id %>/update" class="on-default edit-row"><i class="fa fa-pencil"></i></a>
                            <a href="/niveles/<%= result.id %>/delete" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                    <% }) %>
                    <div id="dialog" class="modal-block mfp-hide">
                        <section class="card">
                            <header class="card-header">
                                <h2 class="card-title">Estás seguro?</h2>
                            </header>
                            <div class="card-body">
                                <div class="modal-wrapper">
                                    <div class="modal-text">
                                        <p>Estás seguro que quieres eliminar esta fila?</p>
                                    </div>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <div class="row">
                                    <div class="col-md-12 text-right">
                                        <button id="dialogConfirm" class="btn btn-primary">Confirmar</button>
                                        <button id="dialogCancel" class="btn btn-default">Cancelar</button>
                                    </div>
                                </div>
                            </footer>
                        </section>
                    </div>
                    <% } %>
                    </tbody>
                </table>
            </div>

</section>
