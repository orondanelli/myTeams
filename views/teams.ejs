<!DOCTYPE html>
<html>
  <head>

		<!-- Basic -->
		<meta charset="UTF-8">

		<title>Equipos | crear</title>
		<meta name="keywords" content="HTML5 Admin Template" />
		<meta name="description" content="Porto Admin - Responsive HTML5 Template">
		<meta name="author" content="okler.net">

		<!-- Mobile Metas -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

		<!-- Web Fonts  -->
		<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

		<!-- Vendor CSS -->
		<link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.css" />
		<link rel="stylesheet" href="/vendor/animate/animate.css">

		<link rel="stylesheet" href="/vendor/font-awesome/css/font-awesome.css" />
		<link rel="stylesheet" href="/vendor/magnific-popup/magnific-popup.css" />
		<link rel="stylesheet" href="/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" />

		<!-- Theme CSS -->
		<link rel="stylesheet" href="/css/theme.css" />

		<!-- Skin CSS -->
		<link rel="stylesheet" href="/css/skins/default.css" />

		<!-- Theme Custom CSS -->
		<link rel="stylesheet" href="/css/custom.css">

		<!-- Head Libs -->
		<script src="/vendor/modernizr/modernizr.js"></script>
        <script src="/vendor/jquery/jquery.js"></script>
      
        <script>
            $( document ).ready(function() {
                document.getElementById("inputTeamName").focus();
                $('#exitoPopup').delay(1000).fadeOut('slow');
            });
            
    </script>
	</head>
  <body>
<section class="body">
<span class="separator"></span>
    <div class="col-lg-12">
	<section class="card">
		<header class="card-header">
			<div class="card-actions">
				<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
				<a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
			</div>

			<h2 class="card-title">Crear Equipo</h2>
			<p class="card-subtitle">
				crear un  <code>equipo</code> ágil.
			</p>
		</header>
		<div class="card-body">
			
			<form class="form-inline" action="/equipos/create" method="post">
				<label class="sr-only" for="inlineFormInputName2">Nombre</label>
				<input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inputTeamName" name="teamName" placeholder="BI-Ops">
                <select class="form-control mb-2 mr-sm-2 mb-sm-0">
                    <% if(locals.arrayLevels) { %>
                        <% arrayLevels.forEach( function( result ) { %>
                            <option><%= result.levelName %></option>
                        <% }) %>
                    <% } %>
                </select>
				<button type="submit" class="btn btn-primary">Enviar</button>
			</form>
		</div>
        <% if(typeof exito == 'undefined'){ %>
                    
        <% } else if (exito == 1){ %>  
        <div class="alert alert-success" id="exitoPopup">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong>Creado!</strong> You are using an awesome template! <a href="" class="alert-link">Say Hi to Porto Admin</a>.
        </div>
        <% } %>
	</section>    
</div>

<div class="col-lg-12">
								<section class="card">
									<header class="card-header">
										<div class="card-actions">
											<a href="#" class="card-action card-action-toggle" data-card-toggle=""></a>
											<a href="#" class="card-action card-action-dismiss" data-card-dismiss=""></a>
										</div>
						
										<h2 class="card-title">Actions</h2>
									</header>
									<div class="card-body">
										<table class="table table-responsive-md mb-0">
											<thead>
												<tr>
													<th>Nombre</th>
													<th>Actions</th>
												</tr>
											</thead>
											<tbody>
                                                <% if(locals.arrayTeams) { %>
                                                    <% arrayTeams.forEach( function( result ) { %>
                                                        <tr>
													       <td><%= result.teamName %></td>
													       <td class="actions">
													       	   <a href=""><i class="fa fa-pencil"></i></a>
                                                               <a href="equipos/<%= result.id %>/delete" class="delete-row"><i class="fa fa-trash-o"></i></a>
													       </td>
                                                            <% }) %>
                                                        <% } %>
												        </tr>
											</tbody>
										</table>
									</div>
								</section>
							</div>
</section>
 </body>
</html>
