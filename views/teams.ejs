  <body>
<section class="body">
<span class="separator"></span>
    <div class="col-lg-12">
	<section class="card">
		<header class="card-header">
			<div class="card-actions">
				<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
				<a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
			</div>

			<h2 class="card-title">Crear Equipo</h2>
			<p class="card-subtitle">
				crear un  <code>equipo</code> ágil.
			</p>
		</header>
		<div class="card-body">

			<form class="form-inline" action="/equipos/create" method="post">
				<label class="sr-only" for="inlineFormInputName2">Nombre</label>
				<input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inputTeamName" name="teamName" placeholder="BI-Ops">
                <select class="form-control mb-2 mr-sm-2 mb-sm-0" name="selectLevelName">
                    <% if(locals.arrayLevels) { %>
                        <% arrayLevels.forEach( function( result ) { %>
                            <option value="<%= result.id%>"><%= result.levelName %></option>
                        <% }) %>
                    <% } %>
                </select>
				<button type="submit" class="btn btn-primary">Enviar</button>
			</form>
		</div>
	</section>
</div>

<div class="col-lg-12">
								<section class="card">
									<header class="card-header">
										<div class="card-actions">
											<a href="#" class="card-action card-action-toggle" data-card-toggle=""></a>
											<a href="#" class="card-action card-action-dismiss" data-card-dismiss=""></a>
										</div>

										<h2 class="card-title">Actions</h2>
									</header>
									<div class="card-body">
                    <table class="table table-responsive-md mb-0" id="datatable-editable">
                      <thead>
                        <tr>
                          <th>Nombre</th>
                          <th>Nivel Actual</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(locals.arrayTeams) { %>
                          <% arrayTeams.forEach( function( result ) { %>
                            <tr>
                               <td class="actionName"><%= result.teamName %></td>
                               <td class="actionLevel"><%= result.Level.levelName %></td>
                               <td class="actions">
                                <a href="#" class="hidden on-editing save-row"><i class="fa fa-save"></i></a>
                                <a href="#" class="hidden on-editing cancel-row"><i class="fa fa-times"></i></a>
                                <a href="#" class="on-default edit-row"><i class="fa fa-pencil"></i></a>
                                <a href="equipos/<%= result.id %>/delete" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
                              </td>
                            </tr>
                           <% }) %>
                           <div id="dialog" class="modal-block mfp-hide">
                             <section class="card">
                               <header class="card-header">
                                 <h2 class="card-title">Estás seguro?</h2>
                               </header>
                               <div class="card-body">
                                 <div class="modal-wrapper">
                                   <div class="modal-text">
                                     <p>Estás seguro que quieres eliminar esta fila?</p>
                                   </div>
                                 </div>
                               </div>
                               <footer class="card-footer">
                                 <div class="row">
                                   <div class="col-md-12 text-right">
                                     <button id="dialogConfirm" class="btn btn-primary">Confirmar</button>
                                     <button id="dialogCancel" class="btn btn-default">Cancelar</button>
                                   </div>
                                 </div>
                               </footer>
                             </section>
                           </div>
                         <% } %>
                      </tbody>
                    </table>
									</div>
								</section>
							</div>
</section>
